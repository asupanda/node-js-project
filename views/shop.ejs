<%- include('./partials/header') %>

<div class="overflow-hidden overflow-y-auto min-h-screen w-full flex flex-col lg:flex-row items-start px-6 sm:px-10 lg:px-20 py-10 sm:py-16 bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 text-white">

    <!-- Sidebar -->
    <div class="text-2xl w-full lg:w-[25%] h-full flex flex-col items-start   p-6 bg-white/10 backdrop-blur-md rounded-lg shadow-lg mb-8 lg:mt-9">
        
        <div class="sortbyfield">
            <div class="flex items-center gap-2 mb-6 sm:mb-8">
                <h3 class="text-lg font-semibold">Sort by</h3>
                <form action="/shop">
                    <select class="border border-white/30 bg-gray-800/20 text-white px-2 py-1 rounded-md focus:outline-none" name="sortby">
                        <option value="popular">Popular</option>
                        <option value="newest">Newest</option>
                    </select>
                </form>
            </div>

            <!-- Category Links -->
            <div class="flex flex-col bg-white/10 p-4 rounded-lg shadow-md w-full">
                <a class="block w-fit mb-2 hover:text-blue-400 transition-colors duration-300" href="#">New Collection</a>
                <a class="block w-fit mb-2 hover:text-blue-400 transition-colors duration-300" href="#">All Products</a>
                <a class="block w-fit mb-2 hover:text-blue-400 transition-colors duration-300" href="#">Discounted Products</a>
            </div>

            <!-- Filter Section -->
            <div class="mt-12 w-full">
                <a class="block w-fit mb-2 font-semibold" href="#">Filter by:</a>
                <a class="block w-fit mb-2 hover:text-blue-400 transition-colors duration-300" href="#">Availability</a>
                <a class="block w-fit mb-2 hover:text-blue-400 transition-colors duration-300" href="#">Discount</a>
            </div>
        </div>
    </div>

    <!-- Product Grid -->
    <div class="w-full lg:w-[75%] flex flex-col gap-5 min-h-[50vh] lg:min-h-screen p-4 sm:p-6">
        <div class="flex flex-wrap justify-center lg:justify-start gap-4 sm:gap-6 p-2 sm:p-4">
            <% products.forEach(function(product){ %>
                <div class="w-full xs:w-[48%] sm:w-[48%] md:w-[30%] lg:w-[23%] p-2 rounded-lg bg-white/10 backdrop-blur-lg shadow-lg hover:cursor-pointer hover:shadow-xl hover:scale-105 transition-transform duration-300">
                    <div class="w-full h-44 sm:h-52 flex items-center justify-center bg-[<%= product.bgcolor %>]">
                        <img class="h-[10rem] sm:h-[12rem]" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="">
                    </div>
                    <div class="flex justify-between items-center px-3 sm:px-4 py-3 sm:py-4 rounded-b-md bg-[<%= product.panelcolor %>] text-[<%= product.textcolor %>]">
                        <div>
                            <h3 class="font-semibold text-sm sm:text-base"><%= product.name %></h3>
                            <h4 class="text-base sm:text-lg font-bold">â‚¹ <%= product.price %></h4>
                        </div>
                        <a class="w-7 sm:w-8 h-7 sm:h-8 flex items-center justify-center rounded-full bg-white text-black shadow-md hover:bg-gray-200 transition-colors duration-300" href="/addtocart/<%= product.id %>">
                            <i class="ri-add-line text-base sm:text-lg"></i>
                        </a>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>
