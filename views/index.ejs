<%- include('./partials/header') %>

<div class="relative w-full h-screen flex items-center justify-center bg-[url('/images/background-shoes.jpg')] bg-cover bg-center">
    <div class="absolute inset-0 bg-black opacity-50"></div>

    <h1 class="absolute top-5 left-10 text-white text-2xl font-bold tracking-wide">SK Soles</h1>

    <div class="relative w-2/3 flex bg-white/10 backdrop-blur-md rounded-lg shadow-lg p-10"> 

        <div class="w-1/2 p-10">
            <h3 class="text-4xl text-white mb-2">Welcome to <span class="text-blue-400 font-semibold">SK Soles</span></h3>
            <h4 class="text-2xl text-gray-200 mb-5">Create your account</h4>
            <form autocomplete="off" action="/users/register" method="post">
                <input class="bg-white/20 text-white placeholder-white/80 block w-full px-3 py-2 border border-white/30 rounded-md mb-3" type="text" placeholder="Full Name" name="fullname">
                <input class="bg-white/20 text-white placeholder-white/80 block w-full px-3 py-2 border border-white/30 rounded-md mb-3" type="email" placeholder="Email" name="email">
                <input class="bg-white/20 text-white placeholder-white/80 block w-full px-3 py-2 border border-white/30 rounded-md mb-3" type="password" placeholder="Password" name="password">
                <button type="submit" class="w-full py-3 mt-2 bg-blue-500 text-white rounded-full cursor-pointer transition-transform duration-300 transform hover:scale-105 active:scale-95 hover:bg-blue-600 shadow-md hover:shadow-lg">
                    Create My Account
                </button>
            </form>
        </div>

        <div class="w-1/2 p-10 border-l border-white/20">
            <h4 class="text-2xl text-gray-200 mb-5">Login to your account</h4>
            <form autocomplete="off" action="/users/login" method="post">
                <input class="bg-white/20 text-white placeholder-white/80 block w-full px-3 py-2 border border-white/30 rounded-md mb-3" type="email" placeholder="Email" name="email">
                <input class="bg-white/20 text-white placeholder-white/80 block w-full px-3 py-2 border border-white/30 rounded-md mb-3" type="password" placeholder="Password" name="password">
                <button type="submit" class="w-full py-3 mt-2 bg-blue-500 text-white rounded-full cursor-pointer transition-transform duration-300 transform hover:scale-105 active:scale-95 hover:bg-blue-600 shadow-md hover:shadow-lg">
                    Login
                </button>
            </form>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>
