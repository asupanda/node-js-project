<body class="font-['Gantari'] bg-[#111]">
    <nav class="w-full sticky top-0 bg-gray-900 text-white p-4 px-6 lg:px-10 flex justify-between items-center z-50">
        <h3 class="text-2xl font-extrabold tracking-wide bg-gradient-to-r from-yellow-400 to-red-500 text-transparent bg-clip-text drop-shadow-lg">
            SK Soles
        </h3>
    
        <% var loggedin = typeof loggedin !== 'undefined' ? loggedin : true; %>
        <% if (loggedin) { %>
            <div class="flex gap-6 text-white items-center">
                <a href="/shop" class="hover:text-yellow-400 transition">Shop</a>
                <a href="/cart" class="hover:text-yellow-400 transition">Cart</a>
                <a href="" class="hover:text-yellow-400 transition">My Account</a>
                <a class="px-4 py-2 text-red-500 hover:text-white border border-red-500 hover:bg-red-500 rounded-md transition-all ml-auto" href="/users/logout">
                    Log Out
                </a>                
            </div>
        <% } %>
    </nav>
    
    